@model Product

<div class="col-sm-12 col-md-4 my-2">
<div class="card" style="width: 18rem;">
    <img src="~/images/Resim1.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
            content.</p>
        <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model.ProductId">
            @* asp action gidiceği sayfa route ise sayfaya gönderilecek id dir. *@
            <i class="fa-solid fa-arrow-up-wide-short"></i> Get Details</a>
    </div>
</div>
<p>@Model.Price.ToString("c")</p>
</div>
